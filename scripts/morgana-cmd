#!/bin/bash

# Morgana Command Wrapper Script
# Simple wrapper for morgana-command.py

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
COMMAND_SCRIPT="$SCRIPT_DIR/morgana-command.py"

if [[ ! -f "$COMMAND_SCRIPT" ]]; then
    echo "Error: morgana-command.py not found at $COMMAND_SCRIPT" >&2
    exit 1
fi

# Use python3 to run the command script
python3 "$COMMAND_SCRIPT" "$@"